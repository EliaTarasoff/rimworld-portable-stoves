<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <WorkGiverDef>
        <defName>DoBillsCookPortableStove</defName>
        <label>cook meals at camping stove</label>
        <giverClass>WorkGiver_DoBill</giverClass>
        <workType>Cooking</workType>
        <priorityInType>95</priorityInType>
        <fixedBillGiverDefs>
            <li>PortableWoodStove</li>
            <li>PortableChemfuelStove</li>
            <li>PortableArchotechStove</li>
        </fixedBillGiverDefs>
        <verb>cook</verb>
        <gerund>cooking at</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <ThingDef Name="PortableStoveBase" ParentName="BuildingBase" Abstract="True">
        <!--
        <defName>PortableStoveBase</defName>
        This does nothing for parent-child definitions?!?!
        -->
        <thingClass>Building_WorkTable_HeatPush</thingClass>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <castEdgeShadows>true</castEdgeShadows>
        <constructEffect>ConstructMetal</constructEffect>
        <tickerType>Normal</tickerType>
        <drawerType>RealtimeOnly</drawerType>
        <fillPercent>0.20</fillPercent>
        <useHitPoints>True</useHitPoints>
        <size>(1,1)</size>
        <!--
        This would make it buildable under the Temperature menu.
        <designationCategory>Temperature</designationCategory>
        -->
        <placeWorkers>
            <li>PlaceWorker_Heater</li>
        </placeWorkers>
        <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <recipes>
            <li>CookMealSimple</li>
        </recipes>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <category>Building</category>
        <building>
            <isMealSource>true</isMealSource>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        </building>
    </ThingDef>
</Defs>