<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>PortableChemfuelStove</defName>
        <label>chemfuel stove</label>
        <description>A portable chemfuel stove, that can boil water and cook basic food.</description>
        <thingClass>Building_WorkTable_HeatPush</thingClass>
        <graphicData>
            <texPath>Things/Building/Misc/Campfire</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
            <damageData>
                <rect>(0.2,0,0.6,0.1)</rect>
            </damageData>
        </graphicData>
        <uiIconPath>Things/Building/Misc/Campfire_MenuIcon</uiIconPath>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <castEdgeShadows>true</castEdgeShadows>
        <constructEffect>ConstructMetal</constructEffect>
        <costList>
            <Steel>30</Steel>
        </costList>
        <tickerType>Normal</tickerType>
        <drawerType>RealtimeOnly</drawerType>
        <fillPercent>0.20</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>1000</WorkToBuild>
            <MaxHitPoints>50</MaxHitPoints>
            <Flammability>0.05</Flammability>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Temperature</designationCategory>
        <category>Building</category>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <recipes>
            <li>CookMealSimple</li>
        </recipes>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Refuelable">
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <fuelConsumptionRate>5.0</fuelConsumptionRate>  <!-- per day...even when it's only-while-used? -->
                <fuelCapacity>15.0</fuelCapacity>
                <fuelFilter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </fuelFilter>
                <initialFuelPercent>1</initialFuelPercent>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>5</glowRadius>
                <glowColor>(0,100,100,0)</glowColor>
            </li>
            <li Class="CompProperties_HeatPusher">
                <compClass>CompHeatPusherPowered</compClass>
                <heatPerSecond>10</heatPerSecond>
                <heatPushMaxTemperature>15</heatPushMaxTemperature>
            </li>
            <li Class="CompProperties_FireOverlay">
                <fireSize>0.5</fireSize>
            </li>
        </comps>
        <building>
            <isMealSource>true</isMealSource>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        </building>
    </ThingDef>
</Defs>