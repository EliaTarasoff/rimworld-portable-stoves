<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>PortableWoodStove</defName>
    <label>hobo stove</label>
    <description>A portable wood-fueled stove, that can boil water and cook basic food.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
        <texPath>Things/Building/Misc/Campfire</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawRotated>false</drawRotated>
        <allowFlip>false</allowFlip>
        <damageData>
            <rect>(0.2,0,0.6,0.1)</rect>
        </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Misc/Campfire_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
        <Steel>10</Steel>
    </costList>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.20</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
        <WorkToBuild>500</WorkToBuild>
        <MaxHitPoints>20</MaxHitPoints>
        <Flammability>0.1</Flammability>
    </statBases>
    <size>(1,1)</size>
    <!--<designationCategory>Production</designationCategory>-->
    <designationCategory>Temperature</designationCategory>
    <category>Building</category>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <recipes>
        <li>CookMealSimple</li>
    </recipes>
    <inspectorTabs>
        <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
        <li Class="CompProperties_Refuelable">
            <consumeFuelOnlyWhenUsed>false</consumeFuelOnlyWhenUsed>
            <fuelConsumptionRate>5.0</fuelConsumptionRate>  <!-- per day!-->
            <fuelCapacity>10.0</fuelCapacity>
            <fuelConsumptionPerTickInRain>0.0003</fuelConsumptionPerTickInRain>
            <fuelFilter>
                <thingDefs>
                    <li>WoodLog</li>
                </thingDefs>
            </fuelFilter>
            <initialFuelPercent>1</initialFuelPercent>
        </li>
        <li Class="CompProperties_Glower">
            <glowRadius>10</glowRadius>
            <glowColor>(252,187,113,0)</glowColor>
        </li>
        <li Class="CompProperties_HeatPusher">
            <compClass>CompHeatPusherPowered</compClass>
            <heatPerSecond>5</heatPerSecond>
            <heatPushMaxTemperature>15</heatPushMaxTemperature>
        </li>
        <li Class="CompProperties_FireOverlay">
            <fireSize>1</fireSize>
        </li>
        <li>
            <compClass>CompGatherSpot</compClass>
        </li>
    </comps>
    <building>
        <isMealSource>true</isMealSource>
        <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
</ThingDef>
</Defs>